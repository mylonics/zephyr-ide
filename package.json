{
  "name": "zephyr-ide",
  "displayName": "Zephyr IDE",
  "description": "A VS Code extension that streamlines setup, build, flashing, and debugging of Zephyr Projects",
  "version": "1.10.9",
  "license": "Apache-2.0",
  "publisher": "mylonics",
  "icon": "media/logo.png",
  "keywords": [
    "zephyr",
    "ide",
    "vscode",
    "extension",
    "development environment",
    "zephyr project",
    "rtos"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mylonics/zephyr-ide.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "zephyr-ide.get-active-project-name",
    "zephyr-ide.get-active-project-path",
    "zephyr-ide.get-active-build-path",
    "zephyr-ide.get-active-build-board-path",
    "zephyr-ide.select-active-build-path",
    "zephyr-ide.get-gdb-path",
    "zephyr-ide.get-toolchain-path",
    "zephyr-ide.get-zephyr-ide-json-variable",
    "zephyr-ide.get-active-project-variable",
    "zephyr-ide.get-active-build-variable",
    "zephyr-ide.get-active-board-name",
    "workspaceContains:.vscode/zephyr-ide.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "walkthroughs": [
      {
        "id": "host-tools-walkthrough",
        "title": "Zephyr IDE Install Host Tools",
        "description": "Follow the instructions at [Zephyr Project Getting Started](https://docs.zephyrproject.org/latest/develop/getting_started/index.html#host-tools) if you run into any issues",
        "next": "workspace-setup",
        "steps": [
          {
            "id": "installWinget",
            "title": "Install winget",
            "description": "Install winget if not already isntalled on your system.\n Modern versions of windows have this winget preinstalled.\n This link will download winget, install the downloaded file before proceeding to the next step.\n[Install winget](https://aka.ms/getwinget)",
            "media": {
              "image": "media/image.png",
              "altText": "Empty image"
            },
            "completionEvents": [
              "onLink:https://aka.ms/getwinget"
            ],
            "when": "isWindows"
          },
          {
            "id": "installHostTools",
            "title": "Install Host Tools",
            "description": "Now install the the host tools with the following command.\n[Install Host Tools](command:zephyr-ide.install-host-tools)\n You may need to restart VS Code after this step.",
            "media": {
              "image": "media/image.png",
              "altText": "Empty image"
            },
            "completionEvents": [
              "onContext:hostToolsInstalled"
            ]
          },
          {
            "id": "checkHostTools",
            "title": "Check Host Tools",
            "description": "Run Check to see if Main Host Tools have been Installed\n[Check](command:zephyr-ide.check-build-dependencies) ",
            "media": {
              "markdown": "media/windows.md"
            },
            "completionEvents": [
              "onContext:buildDependenciesAvailable"
            ]
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "zephyr-ide"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Zephyr IDE",
      "properties": {
        "zephyr-ide.tools_directory": {
          "type": [
            "string"
          ],
          "default": null,
          "description": "Manually specify a tools directory for SDK installation and global zephyr install location"
        },
        "zephyr-ide.use_gui_config": {
          "type": [
            "boolean"
          ],
          "default": false,
          "description": "Display gui config instead of menu config in Project Tree View"
        }
      }
    },
    "keybindings": [
      {
        "command": "zephyr-ide.build",
        "key": "ctrl+shift+B",
        "mac": "ctrl+shift+B"
      },
      {
        "command": "zephyr-ide.flash",
        "key": "ctrl+shift+p",
        "mac": "ctrl+shift+p"
      }
    ],
    "viewsWelcome": [
      {
        "view": "welcome",
        "contents": "In order to use the Zephyr IDE Extension it needs to be fully Initialized.\n[Initialize Extension](command:zephyr-ide.setup-workspace-init)\n Elements of this process may be run individually as well\n This is a 5 step process that can be run by git features, you can open a folder containing a git repository or clone from a URL.\n[Open Folder](command:vscode.openFolder)\n[Clone Repository](command:git.clone)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "config.git.enabled && git.state == initialized && workbenchState == empty"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zephyr-ide-main",
          "title": "Zephyr IDE",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
